# praktika2ikbo16-17
Сделать форк, написать ФИО, группу. Приложить файлы реализации задания 


Исходный код:
Файл Author.java
package testauthor;

public class Author {
    private String name;
    private String email;
    private char gender;
    
    public Author(String name, String email, char gender) {
        this.name = name;
        this.email = email;
        this.gender = gender;
    }
    
    public String getName() {
        return name;
    }
    
    public String getEmail() {
        return email;
    }
    
    public char getGender() {
        return gender;
    }
    
    public void setEmail(String email) {
        this.email = email;
    }
    
    @Override
    public String toString() {
        return "Автор: "+this.name+"("+this.gender+") at "+this.email;
    } 
    
}

Файл testAuthor.java
package testauthor;

public class TestAuthor {

    public static void main(String[] args) {
        Author a1 = new Author("А.С.Пушкин","pushkin@gmail.com",'M');
        System.out.println(a1);
  
    }
    
}




